<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4D07C8"
                android:endColor="#CC9036"
                android:angle="45"/>
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#F2ACAC"
                android:endColor="#0B42E6"
                android:angle="45"/>
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>

