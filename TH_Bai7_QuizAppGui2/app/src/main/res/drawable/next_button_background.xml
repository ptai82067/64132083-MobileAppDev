<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow Layer -->
    <item android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#55000000" /> <!-- Đổ bóng đen -->
            <corners android:radius="25dp" /> <!-- Bo góc -->
        </shape>
    </item>

    <!-- Background Layer -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#007BA7"
            android:endColor="#00C2C2"
            android:angle="90" />
            <corners android:radius="25dp" />
        </shape>
    </item>
</layer-list>
